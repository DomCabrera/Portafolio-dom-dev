---
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/portfolio.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div>
      <div
        class="fixed inset-0 -z-10 w-full h-full px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
      >
      </div>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    color: #ffffff;
  }
  body {
    @apply grid place-content-center p-20;
  }

  body > div {
    @apply container;
  }
</style>
